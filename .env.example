# Example environment variables for local development and CI
# Copy to `.env` and fill values (do NOT commit secrets)

# Database connection string (primary). Fallback: DB_CONN.
# Example: postgres://user:password@localhost:5432/dbname
DATABASE_URL=

# Kept for backward compatibility â€” prefer DATABASE_URL above.
# DB_CONN=

# Temporal / Orchestrator
TEMPORAL_ADDRESS=localhost:7233
ARGO_SERVER=http://localhost:2746
ARGO_NAMESPACE=default

# IAM / KMS
# If using external KMS signer, set the URL endpoint. Otherwise, IAM_PRIVATE_KEY is used for local signing (dev only)
IAM_KMS_SIGN_URL=
IAM_PRIVATE_KEY=dev-key-change-me

# Other runtime flags
ORCHESTRATOR=temporal
